@{
    ViewData["Title"] = "Login";
    var wrongPassFlag = ViewBag.wrongPassword;
    var wrongCredFlag = ViewBag.wrongCred;

    var fullname = TempData["fullName"];
    var sessionId = TempData["sessionId"];
}

<h2>Login</h2>

<form action="Login" method="post">

    <div class="form-group row">

        <div class="col-sm-2">
            <label for="username">Username</label>
        </div>

        <div class="col-sm-6">
            <input name="username" class="form-control" id="username" placeholder="Username" />
        </div>

    </div>

    <div class="form-group row">

        <div class="col-sm-2">
            <label for="password">Password</label>
        </div>


        <div class="col-sm-6">
           <input name="password" class="form-control" id="password" placeholder="Password" />
        </div>

        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary" value="Submit">Submit</button>
        </div>

        <div>
            @if (wrongPassFlag == true)
            {
                <p> Wrong password. </p>
            }
            @if (wrongCredFlag == true)
            {
                <p> Please enter valid credentials. </p>
            }
        </div>
    </div>

</form>


