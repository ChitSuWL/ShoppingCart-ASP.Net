@model List<Order>
<h2>Past Purchases</h2>
@if (Model.Count == 0)
{
    <p>No past purchases found.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate</td>
                    <td>@order.ProductName</td>
                    <td>@order.Quantity</td>
                    <td>@order.Price</td>
                    <td>@order.Total</td>
                </tr>
            }
        </tbody>
    </table>
}
